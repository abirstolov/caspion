{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "baseUrl": ".",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "tests/**/*", "../../types/**/*.d.ts", ".eslintrc.cjs"]
}
